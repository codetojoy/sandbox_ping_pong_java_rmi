<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

<bean id="myRegistry"
      class="org.springframework.remoting.rmi.RmiRegistryFactoryBean" >
    <property name="host" value="127.0.0.1"/>
    <property name="port" value="2020"/>
</bean>

<bean id="pingService" 
      class="org.springframework.remoting.rmi.RmiProxyFactoryBean"
      lazy-init="true" >
    <property name="serviceUrl" value="rmi://localhost:2020/pingServiceEndpoint"/>
    <property name="serviceInterface" value="net.codetojoy.common.PingService"/>
    <property name="refreshStubOnConnectFailure" value="true" />
</bean>

<bean id="pongService" 
      class="net.codetojoy.server.PongServiceImpl"
      lazy-init="true" >
</bean>

<bean id="pongServiceExporter" 
      class="org.springframework.remoting.rmi.RmiServiceExporter"
      lazy-init="true" >
    <property name="serviceName" value="pongServiceEndpoint"/>
    <property name="service" ref="pongService"/>
    <property name="serviceInterface" value="net.codetojoy.common.PongService"/>
    <property name="registry" ref="myRegistry" />
</bean>

</beans>
